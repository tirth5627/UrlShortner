<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link rel="stylesheet" href="<%url%>/output.css">
</head>
<body>
<div class="min-h-screen flex items-center justify-center bg-gray-900">
    <div class="w-full max-w-lg bg-gray-800 rounded-2xl m-3 shadow-lg overflow-hidden">
        <!-- Form Section -->
        <div class="p-8 w-full">
            <div class="mb-8 text-center">
                <h2 class="text-3xl font-extrabold text-indigo-400">Get Started</h2>
                <p class="text-sm text-gray-400">Login or create a new account</p>
            </div>

            <!-- Tab Buttons -->
            <div class="flex justify-center space-x-6 mb-8">
                <button id="loginTab"
                        class="px-6 py-2 text-lg font-semibold border-b-2 focus:outline-none border-transparent hover:border-indigo-400 hover:text-indigo-400 text-gray-400 transition-all">
                    Login
                </button>
                <button id="signupTab"
                        class="px-6 py-2 text-lg font-semibold border-b-2 focus:outline-none border-transparent hover:border-indigo-400 hover:text-indigo-400 text-gray-400 transition-all">
                    Signup
                </button>
            </div>
            <!-- Login Form -->
            <form id="loginForm" class="space-y-6" action="/login/" method="post">
                <div>
                    <label for="emailLogin" class="block text-sm font-medium text-gray-400">Email</label>
                    <input id="emailLogin" type="email" name="email" placeholder="you@example.com" required
                           class="w-full px-4 py-3 rounded-lg border border-gray-700 bg-gray-900 text-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                </div>
                <div>
                    <label for="passwordLogin" class="block text-sm font-medium text-gray-400">Password</label>
                    <input id="passwordLogin" type="password" name="password" placeholder="••••••••" required
                           class="w-full px-4 py-3 rounded-lg border border-gray-700 bg-gray-900 text-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                </div>
                <div class="flex justify-between items-center text-sm text-gray-400">
                    <label class="flex items-center">
                        <input type="checkbox" class="form-checkbox text-indigo-500 bg-gray-900 border-gray-700 rounded">
                        <span class="ml-2">Remember Me</span>
                    </label>
                    <a href="#" class="hover:underline text-indigo-400">Forgot Password?</a>
                </div>
                <button type="submit"
                        class="w-full py-3 bg-purple-600 rounded-lg text-white font-bold hover:bg-purple-700 focus:ring-4 focus:ring-purple-300 transition-all">
                    Login
                </button>
            </form>

            <!-- Signup Form -->
            <form id="signupForm" class="space-y-6 hidden" action="/signup" method="post">
                <div>
                    <label for="nameSignup" class="block text-sm font-medium text-gray-400">Full Name</label>
                    <input id="nameSignup" type="text" name="name" placeholder="John Doe" required
                           class="w-full px-4 py-3 rounded-lg border border-gray-700 bg-gray-900 text-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                </div>
                <div>
                    <label for="emailSignup" class="block text-sm font-medium text-gray-400">Email</label>
                    <input id="emailSignup" type="email" name="email" placeholder="you@example.com" required
                           class="w-full px-4 py-3 rounded-lg border border-gray-700 bg-gray-900 text-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                </div>
                <div>
                    <label for="passwordSignup" class="block text-sm font-medium text-gray-400">Password</label>
                    <input id="passwordSignup" type="password" name="password" placeholder="••••••••" required
                           class="w-full px-4 py-3 rounded-lg border border-gray-700 bg-gray-900 text-gray-300 focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                </div>
                <button type="submit"
                        class="w-full py-3 bg-purple-600 rounded-lg text-white font-bold hover:bg-purple-700 focus:ring-4 focus:ring-purple-300 transition-all">
                    Signup
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    if(`<%=locals.message%>`===`Failed`){
        alert("User already exists");
    }
    if(`<%=locals.message%>`===`Success`){
        alert("Registration successful!!\nYou can now login");
    }
    if(`<%=locals.message%>`===`Signup`){
        alert("Login Failed\nYou need to SignUp First");
    }
    const loginTab = document.getElementById("loginTab");
    const signupTab = document.getElementById("signupTab");
    const loginForm = document.getElementById("loginForm");
    const signupForm = document.getElementById("signupForm");

    loginTab.addEventListener("click", () => {
        loginForm.classList.remove("hidden");
        signupForm.classList.add("hidden");
        loginTab.classList.add("border-indigo-400", "text-indigo-400");
        signupTab.classList.remove("border-indigo-400", "text-indigo-400");
    });

    signupTab.addEventListener("click", () => {
        signupForm.classList.remove("hidden");
        loginForm.classList.add("hidden");
        signupTab.classList.add("border-indigo-400", "text-indigo-400");
        loginTab.classList.remove("border-indigo-400", "text-indigo-400");
    });
</script>

</body>
</html>
